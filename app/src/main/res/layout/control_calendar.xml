<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".controls.Calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginHorizontal="@dimen/padding"
        android:layout_marginBottom="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_CalendarBack"
            android:background="@drawable/ic_chevron_left"
            android:minWidth="0dp"
            android:backgroundTint="@color/fgColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/padding"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_CalendarMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                tools:text="Enero" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_marginHorizontal="@dimen/padding"
                android:text="@string/of"
                android:alpha="0.5"/>

            <TextView
                android:id="@+id/tv_CalendarYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                tools:text="2023" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_CalendarNext"
            android:background="@drawable/ic_chevron_right"
            android:backgroundTint="@color/fgColor"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TableLayout
        android:layout_weight="1"
        android:layout_marginTop="@dimen/padding"
        android:id="@+id/tb_Calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>