<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.panel.sections.MyAnimalsFragment"
    style="@style/global.Section">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            style="@style/animalProfile.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding"
            android:text="@string/my_animals" />


        <com.example.ilpp.controls.AnimalSearch
            android:id="@+id/vw_AnimalSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.ilpp.controls.AnimalsManagerBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/control_animals_manager_bar" />

            </LinearLayout>

        </com.example.ilpp.controls.AnimalSearch>

    </LinearLayout>

</RelativeLayout>