<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="home.Search" parent="">
        <item name="android:background">@drawable/shape_home_search</item>
    </style>

    <style name="home.Header" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="home.Header.Link" parent="home.Header">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/shape_link</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="category" parent="">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_animal_profile_detail_box</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="category.Image" parent="">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="shapeAppearanceOverlay">@style/category.Image.Overlay</item>
    </style>

    <style name="category.Image.Overlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="category.Text" parent="">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>